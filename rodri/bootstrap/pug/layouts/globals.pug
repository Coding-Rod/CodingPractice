//- Mixins

mixin navItem(val,index)
	li.nav-item
		if index == "#1"
			a.nav-link.active(aria-current='page' href=index)= val
		else
			if val == "Comprar tickets"
				a.nav-link.text-platzi(aria-current='page' href=index)= val
			else
				a.nav-link(aria-current='page' href=index)= val

mixin navButton(val,index)
	.col
		a(href=index)=val

mixin carouselImage(val,index)
	if index == 0
		.carousel-item.active
			img.d-block.w-100(src=val alt='hawai'+(index+1))
	else
		.carousel-item
			img.d-block.w-100(src=val alt='hawai'+(index+1))

mixin imgCard(img,title,text)
	.card
		img.card-img-top(src= img alt= title)
		.card-body
			.badges(style="text-align: right;")
				span.badge.bg-warning Javascript
				span.badge.bg-info React
			h5(class= "card-title" class="mb-0")= title
			p(class= "card-text")= text